                            </ControlTemplate>

                        </Button.Template>

                    </Button>
                    <Image Source="Image/mix.png" Margin="458,18,0,-12" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="34"/>
                    <TextBlock x:Name="timemus" Text="" Margin="157,29,1012,-16" FontSize="14" Foreground="#FF978E8E"/>
                </Grid>
                <Rectangle Opacity="0.8" Fill="Black" Margin="0,0,0,-24"/>
                <DockPanel VerticalAlignment="Center" Height="43" Margin="0,2,0,-13" HorizontalAlignment="Left" >
                    <Image Source="Image\NewAlbomIco.png" Width="50" Margin="0,6"/>
                    <TextBlock x:Name="TB_MUsic" Text="Better Now" Margin="0,5,0,19"  FontSize="14" Foreground="White"/>
                    <TextBlock x:Name="TB_album" Text="'Album'" Margin="-70,24,20,0"  FontSize="14" Foreground="#FF978E8E"/>




                </DockPanel>
            </Grid>
        </StackPanel>
        <Grid Height="632" VerticalAlignment="Bottom">
            <Slider x:Name="SliderPlay" Style="{StaticResource Horizontal_Slider}"  Margin="0,563,0,48" />
        </Grid>
        <Rectangle Fill="Black" Height="59" StrokeThickness="1.5" VerticalAlignment="Top" Opacity="0.8"/>
        <Button Panel.ZIndex="3" x:Name="Button_Close" Margin="0,7,10,0" Height="20" VerticalAlignment="Top" Click="Button_Close_Click" HorizontalAlignment="Right" Width="19">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd" Background="Transparent">
                        <Path x:Name="Pt" Data="M0,0 M0.2,0.2 L 0.8,0.8 M0.2,0.8 L0.8,0.2 M1,1"
                      Stretch="Uniform" Stroke="White" StrokeThickness="1"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="Red"/>
                            <Setter TargetName="Pt" Property="Stroke" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="Button_Collapse" Margin="0,7,32,0" Height="20" VerticalAlignment="Top" Click="Button_Collapse_Click" HorizontalAlignment="Right" Width="26">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd" Background="Transparent">
                        <Path x:Name="Pt" Data="M0,0 M0.8,0.2 L 0.8,0.8     M0,0 M0.2,0.2 L 0.2,0.8     M0,0 M0.2,0.8 L 0.8,0.8         M0.2,0.2 L0.8,0.2 M1,1"
                      Stretch="Uniform" Stroke="White" StrokeThickness="1"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="Red"/>
                            <Setter TargetName="Pt" Property="Stroke" Value="orange"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="Button_Minim" Margin="0,7,60,0" Height="20" VerticalAlignment="Top" Click="Button_Minim_Click" HorizontalAlignment="Right" Width="26" Foreground="{x:Null}" BorderBrush="#FFF1F1F1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd" Background="Transparent">
                        <Path x:Name="Pt" Data="     M0,0 M0.2,0.4 L 0.8,0.4        "
                      Stretch="Uniform" Stroke="#FFFBFBFB" StrokeThickness="1" Margin="3,0,4,0"/>
                    </Border>
